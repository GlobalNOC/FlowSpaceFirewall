          <range start="2001" end="4000" />
        </port>

        <port name="s3-eth2">
          <range start="2001" end="4000" />
        </port>

        <port name="s3-eth3">
          <range start="2001" end="4000" />
        </port>

      </switch>

      <switch name="foo2" max_flows="10" flow_rate="1" packet_in_rate="100" flush_rules_on_connect="1">
        <port name="s2-eth1">
          <range start="-1" end="-1" />
